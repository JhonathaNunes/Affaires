<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="br.com.projetomobile.app.AddGastoActivity"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:id="@+id/txtTituloAddGasto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Inserir Gastos"
        android:textSize="20dp"
        android:gravity="center"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:hint="Descrição"
        android:id="@+id/txtDescricao"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Valor"
        android:inputType="numberDecimal"
        android:id="@+id/txtValor"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Data"
        android:focusable="false"
        android:inputType="none"
        android:id="@+id/txtData"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Local"
        android:id="@+id/txtLocal"/>

    <Spinner
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:id="@+id/categorias"></Spinner>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Categoria"
        android:visibility="gone"
        android:enabled="false"
        android:id="@+id/txtCategoriaSpinner"/>

    <Button
        android:id="@+id/btnAddGasto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Adcionar"
        android:layout_gravity="center"
        android:textSize="12dp"
        android:background="@color/colorPrimary"
        android:textColor="@android:color/white"
        android:layout_marginTop="10dp"
        android:onClick="novoGasto"/>

    <WebView
        android:id="@+id/mapa"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"/>

</LinearLayout>